{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/chain-wax", "dest": "/public/chain-wax.html" },
    { "src": "/strava-callback", "dest": "/public/strava-callback.html" }
  ]
}
